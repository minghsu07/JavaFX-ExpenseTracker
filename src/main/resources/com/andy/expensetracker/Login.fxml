<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="540.0" prefWidth="880.0" style="-fx-background-color: #F2F2F2;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.andy.expensetracker.Login.LoginController">
    <children>
        <AnchorPane prefHeight="540.0" prefWidth="360.0" style="-fx-background-color: #9FD48F;">
            <children>
                <Label layoutX="40.0" layoutY="240.0" text="Expense Tracking System" textFill="WHITE">
                    <font>
                        <Font name="Cambria Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
      <VBox layoutX="500.0" layoutY="52.0" prefHeight="303.0" prefWidth="351.0">
         <children>
            <Label text="User Login">
               <font>
                  <Font name="Cambria Bold" size="32.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <Label text="Account:">
               <font>
                  <Font name="Cambria Bold" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Label>
            <TextField>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Cambria" size="18.0" />
               </font>
            </TextField>
            <Label text="Password:">
               <font>
                  <Font name="Cambria Bold" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Label>
            <TextField>
               <font>
                  <Font name="Cambria" size="18.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" layoutX="500.0" layoutY="340.0" prefHeight="128.0" prefWidth="351.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleLoginClicked" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #65B25E;" text="Log in" textFill="WHITE">
               <font>
                  <Font name="Cambria" size="24.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <children>
                  <TextFlow prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Text fill="#c9c5c5" strokeType="OUTSIDE" strokeWidth="0.0" text="Not a user?" />
                        <Hyperlink text="Create new account" />
                     </children>
                  </TextFlow>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
    </children>
</AnchorPane>
